package org.program.service;

import java.util.List;

import org.program.entity.Issue;
import org.program.entity.LeaveApplication;
import org.program.repository.IssueRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

@Service
public class IssueService {
	@Autowired
	private IssueRepository issueRepo;
	
	public void saveComplaint(Issue issue) {
		issueRepo.save(issue);
	}
	public List<LeaveApplication> getApplicationRecords(String email) {
		List<LeaveApplication> list = issueRepo.findByStudentEmail(email);
		return list;
	}
}
